@model GS247.Models.LibraryCategory

@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}
    <head>

        <style>
            .formbut {
                background: #50d8af;
            }
        </style>
    </head>
<div class="cont_right formWrapper" style="padding:15px 20px 310px 20px;">
    <h3>Are you sure you want to delete this?</h3>
    <h1 style="color:#0c2e8a">Delete Category</h1>
    <div class="">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="detail-view" width="60%">
                <tr>
                    <th width="100px">Category Name</th>
                    <td>@Html.DisplayFor(model => model.CategoryName)</td>
                    <td><input class="formbut" type="submit" name="Category_delete" value="Delete" /></td>
                </tr>
               


            </table>
        }
    </div>
</div>

