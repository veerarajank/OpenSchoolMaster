@model GS247.Models.HRModule.LeaveRequest
@{
    ViewBag.Title = "ViewLeaveRequest";
    Layout = "~/Views/Shared/_LeaveTypesLayout.cshtml";
}


<div class="cont_right formWrapper">
    <h2>Leave Request</h2>
    <div class="search_btnbx">
        <div class="contrht_bttns"></div>
    </div>
    <div class="clear"></div>
    <div class="leaverequest-block">
        <table class="leaver-table" border="0" cellpadding="0" cellspacing="0" width="100%">
            <tbody>
                <tr>
                    <td width="240" class="leavelft-bg">
                        <div class="leave-rqst-left">
                            <table class="leaver-table-inner leave-rqst-left-clr" border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tbody>
                                    <tr>
                                        <th width="90px"><h3>LEAVE TYPE</h3></th>
                                        <th width="10px">:</th>
                                        <td><p>@Model.LeaveType</p></td>
                                    </tr>
                                    <tr>
                                        <th width="80px"><h3> HALF DAY</h3></th>
                                        <th width="10px">:</th>
                                        <td><p>@Model.HalfDay</p></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>
                    <td width="360" class="leaveright-bg">
                        <div class="leave-rqst-right">
                            <table class="leaver-table-inner leave-rqst-right-clr" border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tbody>
                                    <tr>
                                        <th width="110px"><h3>REQUESTED BY</h3></th>
                                        <th width="10px">:</th>
                                        <td>
                                            <p>
                                                @Model.RequestedBy
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><h3>FROM</h3></th>
                                        <th width="10px">:</th>
                                        <td>
                                            <p>
                                                @Model.FromDate
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><h3>TO</h3></th>
                                        <th width="10px">:</th>
                                        <td>
                                            <p>
                                                @Model.ToDate
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>
                    <td width="100" class="leave-last-bg">
                        <div class="leave-rqst-right">
                            <table class="leaver-table-inner " border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tbody>
                                    <tr>
                                        <th width="90px"><h2>STATUS</h2></th>
                                    </tr>
                                    <tr>
                                        <th>
                                            <h1>
                                                @Model.Status
                                            </h1>
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="leave-reason-brd-bg1">
            <div class="tablereson-blok leave-reason-brd-bg">
                <h3>REASON</h3>
            </div>
            <div class="reason-textarea">
                <p>@Model.Reason</p>
            </div>
        </div>
    </div>
    <div class="aprived-by">
        <h4>
            <span>
            </span>
            -
        </h4>
        <p>
        </p>
    </div>
</div>
