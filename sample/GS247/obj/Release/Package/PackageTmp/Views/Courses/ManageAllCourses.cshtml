        modal.style.display = "block";
        var request = new XMLHttpRequest();
        request.open('GET', "/Courses/GetAllCourses?CourseId=" + CourseId, true)
        request.onload = function () {
            var data = JSON.parse(this.response);
            for (var i = 0; i < data.length; i++) {
