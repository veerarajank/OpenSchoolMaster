 <script>
     function errorValidate() {
         var ret = 0;
         if (document.getElementById("SubjectsCommonPool_subject_name").value == '') { ret = 1; }
         if (document.getElementById("SubjectsCommonPool_max_weekly_classes").value == '') { ret = 1; };
         
         
