             if (document.getElementById("SubjectsCommonPool_subject_tilte1").value == '') { ret = 1;}
             if (document.getElementById("SubjectsCommonPool_subject_tilte2").value == '') { ret = 1;}
         }
         return ret;
         
     }
     function subjectload(favorite) {
         if (favorite == 0) {
             var favorite = $('#course').val();
         }
