        function GetStudentList() {
            $('#loading').show();
            var currentPageIndex = $('#CurrentPageIndex').val();
            var feeID = $('#FeeId').val();
            var studentAdvanceSearch1 = [];
            var studentAdvanceSearch = new Object();
            studentAdvanceSearch.FeeId = $('#FeeId').val();
