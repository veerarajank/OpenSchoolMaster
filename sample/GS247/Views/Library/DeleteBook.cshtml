@model GS247.Models.LibraryBook

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}

<head>

    <style>
        .formbut {
            background: #50d8af;
        }
    </style>
</head>
<div class="cont_right formWrapper" style="padding:15px 20px 310px 20px;">
    <h3>Are you sure you want to delete this?</h3>
    <h1 style="color:#0c2e8a">Delete Book</h1>
    <div class="">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <table class="detail-view" width="60%">
            <tr>
                <th width="100px">Isbn</th>
                <td>@Html.DisplayFor(model => model.ISBN)</td>
            </tr>
            <tr>
                <th width="100px">Title</th>
                <td> @Html.DisplayFor(model => model.Title)</td>
            </tr>
            <tr>
                <th width="100px">Subject</th>
                <td>  @ViewBag.SubjectName</td>
            </tr>
            <tr>
                <th width="100px">Category</th>
                <td>@ViewBag.CategoryName</td>
            </tr>
            <tr>
                <th width="100px">Author</th>
                <td> @ViewBag.AuthorName</td>
            </tr>
            <tr>
                <th width="100px">Edition</th>
                <td> @Html.DisplayFor(model => model.Edition)</td>
            </tr>
            <tr>
                <th width="100px">Publisher</th>
                <td>  @Html.DisplayFor(model => model.Publisher)</td>
            </tr>
            <tr>
                <th width="100px">Copy</th>
                <td> @Html.DisplayFor(model => model.Copy)</td>
            </tr>
            <tr>
                <th width="100px">Book Position</th>
                <td> @Html.DisplayFor(model => model.BookPosition)</td>
            </tr>
            <tr>
                <th width="100px">Shelf No.</th>
                <td> @Html.DisplayFor(model => model.ShelfNo)</td>
            </tr>
            <tr>
                <td height="10px">&nbsp;</td>
                <td><input class="formbut" type="submit" name="book_delete" value="Delete" /></td>
            </tr>

        </table>
        }
    </div>
</div>


    
