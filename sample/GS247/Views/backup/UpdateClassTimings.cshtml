@model GS247.Models.Settings.ClassTiming

@{
    ViewBag.Title = "UpdateClassCommonTimings";
    Layout = "~/Views/Shared/_SettingsLayout.cshtml";
}
<style>
    .formbut {
        background: #50d8af;
    }
</style>
<script>
    function validate() {
        if (document.getElementById("UserName").value == '') return false;
        if (document.getElementById("StartTime").value == '') return false;
        if (document.getElementById("EndTime").value == '') return false;
        return true;
    }
</script>
<div class="cont_right formWrapper">
    <h1>Create Class Common Timings</h1>
    <div class="top-hed-btn-right">
        <a class="a_tag-btn" href="@Url.Action("ManageClassTimings","Settings")"><span>Back</span></a>
    </div>
    <p class="note">Fields with<span class="required">*</span> are required.</p>
    <div class="formCon">

        <div class="formConInner">

            @using (Html.BeginForm("InsertClassTimings", "Settings", FormMethod.Post, new { onsubmit = "return validate()" }))
            {
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        @Html.HiddenFor(Model => Model.Id)
                        <td><label for="EmployeeCategories_name" class="required">Name <span class="required">*</span></label></td>
                        <td>@Html.TextBoxFor(Model => Model.Name, new { id = "UserName", required = "required", size = "30", maxlength = "255" })</td>
                        <td><label for="EmployeeCategories_prefix" class="required">Start Time <span class="required">*</span></label></td>
                        <td>@Html.TextBoxFor(Model => Model.StartTime, new { id = "StartTime", type = "time", required = "required", maxlength = "255" })</td>
                        <td><label for="EmployeeCategories_prefix" class="required">End Time<span class="required">*</span></label></td>
                        <td>@Html.TextBoxFor(Model => Model.EndTime, new { id = "EndTime", type = "time", required = "required", maxlength = "255" })</td>
                    </tr>
                    <tr><td>&nbsp;</td></tr>
                    <tr>
                        <td>
                            @Html.CheckBoxFor(Model => Model.IsBreak)
                            <span>Break</span>
                        </td>
                        <td>&nbsp;</td>
                        <td>
                            @Html.CheckBoxFor(Model => Model.IsAllBatch)
                            <span>All Batch</span>
                        </td>
                    </tr>
                    <tr><td>&nbsp;</td></tr>
                    <tr>
                        <td>WEEK DAYS</td>
                    </tr>
                    <tr><td>&nbsp;</td></tr>
                    @for (int i = 0; i < Model.Weekdays.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(Model => Model.Weekdays[i].IsEnable)
                                @Model.Weekdays[i].Name
                                @Html.HiddenFor(Model => Model.Weekdays[i].Id)
                            </td>
                        </tr>
                    }

                </table>
                <div style="padding-top:20px;">
                    <input class="formbut" type="submit" name="yt0" value="Save" />
                </div>
            }

        </div>
    </div><!-- form -->
</div>
