@model GS247.Models.Settings.DefaultWeekdaysList

@{
    ViewBag.Title = "WeekDaysSetup";
    Layout = "~/Views/Shared/_SettingsLayout.cshtml";
}
<style>
    .formCon
    {
        width:30%;
    }
    .formbut {
        background: #50d8af;
    }
</style>
<div class="cont_right formWrapper">
    <h1>Week Days</h1>
    <div class="formCon">

        <div class="formConInner">

            @using (Html.BeginForm("UpdateWeekDays", "Settings", FormMethod.Post))
            {
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    @for (int i = 0; i < Model.Weekdays.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(Model => Model.Weekdays[i].IsEnable)
                                @Model.Weekdays[i].Name
                                @Html.HiddenFor(Model => Model.Weekdays[i].Id)
                            </td>
                        </tr>
                    }
                </table>

                <div style="padding-top:20px;">
                    <input class="formbut" type="submit" name="yt0" value="Save" />
                </div>
            }

        </div>
    </div><!-- form -->
</div>


