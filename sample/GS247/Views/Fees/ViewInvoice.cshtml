    <script type="text/javascript">

    $(document).ready(function () {
        $('#loading').hide();
        loadTranactionData();
    });

    function tableClearValue() {
        var Table = document.getElementById("tranasctionTable");
        Table.innerHTML = "";
        $("#tranasctionTable").append(
            "<tr class=\"tablebx_topbg\">"
              + "<td align=\"center\">#</td>"
