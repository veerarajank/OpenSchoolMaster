@model GS247.Models.Tax
@{
    ViewBag.Title = "Tax";
    Layout = "~/Views/Shared/_FeesLayout.cshtml";
}

<style>
    .container {
        width: 1000px;
        min-height: 800px;
        margin: 0px auto 20px auto;
        padding: 0px;
        background: #FFF url(../images/cont_left_bg.png) left repeat-y;
    }
</style>


    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td valign="top" width="247">
                                            <div class="cont_right formWrapper">
                                                @if (Model != null) {<h1>Update Tax</h1>}
                                                else
                                                {<h1>Create Tax</h1> }

                                                <div class="button-bg">
                                                    <div class="top-hed-btn-left">
                                                        <a class="a_tag-btn" href="@Url.Action("ManageTax", "Fees")"><span>Back</span></a>
                                                    </div>
                                                    <div class="top-hed-btn-right">
                                                        <ul>
                                                            <li><a class="a_tag-btn" href="@Url.Action("ManageTax","Fees")"><span>Manage</span></a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                              
                                                <style>
                                                    #status input {
                                                        float: left;
                                                    }

                                                    #status label {
                                                        float: left;
                                                    }
                                                </style>

                                                @if (Model != null)
                                                {
                                                    <div class="formCon">
                                                        <div class="formConInner">
                                                            <form id="fee-taxes-form" action="UpdateTax" method="post">

                                                                <p class="note">Fields with <span class="required"> * </span>are required.</p>

                                                                
                                                                <input id="TaxID" type="hidden" value="@Model.TaxID" name="TaxID">
                                                                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_label" class="required">Label <span class="required">*</span></label></td>
                                                                        <td><input size="60" maxlength="200" name="TaxName" id="TaxName" value="@Model.TaxName" type="text" required />		</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_value" class="required">Value ( % ) <span class="required">*</span></label></td>
                                                                        <td><input size="5" maxlength="5" name="Value" id="Value" value="@Model.Value" type="text" class="only-numeric" required onchange="onValueChange(this);" />		</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_is_active">Is Active</label></td>
                                                                        <td id="status">
                                                                            <select style="width:150px;" name="StatusFlag" id="StatusFlag">
                                                                                @if (@Model.StatusFlag == 1)
                                                                                {
                                                                                    <option value="1" selected="selected">Active</option>
                                                                                    <option value="2">Inactive</option>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <option value="1">Active</option>
                                                                                    <option value="2" selected="selected">Inactive</option>
                                                                                }
                                                                            </select>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td><input class="formbut-n" type="submit" name="yt0" value="Update" style="height:30px" /></td>
                                                                    </tr>


                                                                </table>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row buttons">

                                                                </div>

                                                            </form>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="formCon">
                                                        <div class="formConInner">
                                                            <form id="fee-taxes-form" action="CreateTax" method="post">

                                                                <p class="note">Fields with <span class="required"> * </span>are required.</p>

                                                                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_label" class="required">Label <span class="required">*</span></label></td>
                                                                        <td><input size="60" maxlength="200" name="TaxName" id="TaxName" type="text" required />		</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_value" class="required">Value ( % ) <span class="required">*</span></label></td>
                                                                        <td><input size="5" maxlength="5" name="Value" id="Value" type="text" class="only-numeric" required onchange="onValueChange(this);" />		</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><label for="FeeTaxes_is_active">Is Active</label></td>
                                                                        <td id="status">
                                                                            <select style="width:150px;" name="StatusFlag" id="StatusFlag">
                                                                                <option value="1" selected="selected">Active</option>
                                                                                <option value="2">Inactive</option>
                                                                            </select>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td>&nbsp;</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>&nbsp;</td>
                                                                        <td><input class="formbut-n" type="submit" name="yt0" value="Create" style="height:30px" /></td>
                                                                    </tr>


                                                                </table>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row">


                                                                </div>

                                                                <div class="row buttons">

                                                                </div>

                                                            </form>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                           
    <script type="text/javascript">

        function onValueChange() {
            var str = $("#Value").val();
            if (str != "") {
                if (parseInt(str) > 100)
                    $("#Value").val('0.00');
            }
        };

        $(document).ready(function () {

            $(".only-numeric").bind("keypress", function (event) {

                if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
                    event.preventDefault();
                }

            });

        });

    </script>

