                                <td colspan="4"><h3>Weightage Settings</h3></td>

                            </tr>
                            <tr>
                                <td>
                                    <label for="FA1Weightage" class="required">
                                        FA 1 Weightage <span class="required">*</span>
                                    </label>
                                </td>
                                <td><input name="FA1Weightage" id="FA1Weightage" type="text" required>            </td>
